
<%= form_with(model: service, local: true) do |form| %>
  <% if service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
      <% service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :service_name,class:"form-control" %>
  </div>



  <div class="field">
    <%= form.label :user_id ,"Résponsable du service"%>
    <%= form.select :user_id, User.all.collect { |p| [p.name, p.id] }, {prompt: "select a responsable"}, class: 'form-control' %>
  </div>


  <div class="field">
    <%= form.label :department_id, "Departement" %>
    <%= form.select :department_id, Department.all.collect {|d| [d.name, d.id]}, {prompt: "select a department"}, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :activity_area ,"Zone d'activité"%>
    <%= form.text_field :activity_area,  class: "form-control" %>
  </div>

<!--  <div class="field">
    <%#= form.label :user_id %>
    <%#= form.number_field :user_id, id: :service_user_id %>
  </div>-->

  <div class="actions">
    <%= form.submit class:"btn btn-md btn-success pull-right"  %>
  </div>
<% end %>
