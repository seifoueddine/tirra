<table class="table sortable">
  <thead>
  <tr>
    <th>Code <span class="glyphicon glyphicon-sort-by-alphabet"></span></th>
    <th>Designation <span class="glyphicon glyphicon-sort-by-alphabet"></span></th>
    <th>Amount <span class="glyphicon glyphicon-sort-by-order"></span></th>
    <th>sale price <span class="glyphicon glyphicon-sort-by-order"></span></th>
    <th>pmp <span class="glyphicon glyphicon-sort-by-order"></span></th>
    <th>partial price <span class="glyphicon glyphicon-sort-by-order"></span></th>
    <th>Action</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% paginate.each do |sto| %>
      <tr>
        <td><%= sto.code %></td>
        <td><%= sto.designation %></td>
        <td><%= sto.amount %></td>
        <td><%= sto.price %></td>
        <td><%= sto.pmp%></td>
        <td><%if sto.pmp %><%= sto.pmp * sto.amount%><%else%>0<%end%></td>

        <td><%= link_to 'Destroy',sto, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-md btn-danger"%></td>
      </tr>
  <% end %>
  </tbody>
</table>
<div class="row">
  <div class="col-sm-6">
    <div  id="dataTables-example_info" role="status" aria-live="polite">
      <span>Affichage  <%=paginate.length%> de <%= @total%> entrées</span>
    </div>
  </div>
  <div class="col-sm-6" >
    <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate" style="position: absolute; right:13px; top: -20px">
      <%= will_paginate paginate,renderer: BootstrapPagination::Rails , inner_window: 1 , previous_label: "Précédent", next_label: "Suivant"%>
    </div>
  </div>
</div>