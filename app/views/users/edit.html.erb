

<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">

      <div class="panel-body">
        <h1> Editing User : <%= @user.name %></h1>
        <hr>
        <%= link_to 'Show', @user,class:"btn btn-md btn-success" %> |
        <%= link_to 'Back', users_path ,class:"btn btn-md btn-warning"%>
        <hr>
        <%= form_for(@user) do |f| %>
            <% if @user.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(user.errors.count, "error") %> prohibited this provider from being saved:</h2>

                  <ul>
                    <% user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>
            <br>
            <div class="field">
              <%= f.label :name %>
              <%= f.text_field :name, id: :user_name ,class:"form-control"%>
            </div>
            <br>
            <div class="field">
              <%= f.label :email %>
              <%= f.text_field :email, id: :user_email ,class:"form-control"%>
            </div>
            <br>
            <div class="field">
              <%= f.label :role %>
              <%= f.select :role, options_for_select([["Admin","admin"],["Operator","operator"]]),{},class:"form-control"%>
            </div>
            <hr>
            <div class="actions">
              <%= f.submit class:"btn btn-md btn-success pull-right" %>
            </div>
            <br>
        <% end %>

      </div>
    </div>
  </div>
</div>